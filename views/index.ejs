<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <style>
        html, body {
            height: 100%;
        }
        body {
            display: flex;
            flex-direction: column;
        }
        .content-wrapper {
            flex: 1 0 auto;
        }
        footer {
            flex-shrink: 0;
        }
        .card-link-wrapper {
            text-decoration: none;
            color: inherit;
            display: block;
            height: 100%;
            cursor: pointer;
        }
        .card-link-wrapper:hover {
            text-decoration: none;
            color: inherit;
        }
        .card-link-wrapper .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        .card-link-wrapper:hover .card {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .card-link-wrapper .btn {
            pointer-events: none;
        }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <nav class="navbar navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1">Links to services on this network</span>
            </div>
        </nav>

        <div class="container">
            <div class="row mb-4">
                <div class="col-12">
                    <form action="/" method="GET" class="d-flex">
                        <input type="text" name="search" class="form-control me-2" placeholder="Search services..." value="<%= search %>">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>
                </div>
            </div>

            <% if (totalPages > 1) { %>
                <%- include('partials/pagination', { currentPage, totalPages }) %>
            <% } %>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
                <% if (serviceLinks.length === 0) { %>
                    <div class="col-12">
                        <div class="alert alert-info" role="alert">
                            No service links found.
                        </div>
                    </div>
                <% } else { %>
                    <% serviceLinks.forEach(link => { %>
                        <div class="col">
                            <a href="<%= link.url %>" target="_blank" class="card-link-wrapper">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= link.title %></h5>
                                        <% if (link.description) { %>
                                            <p class="card-text"><%= link.description %></p>
                                        <% } %>
                                    </div>
                                    <div class="card-footer">
                                        <button class="btn btn-primary w-100">Visit Service</button>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }); %>
                <% } %>
            </div>

            <% if (totalPages > 1) { %>
                <%- include('partials/pagination', { currentPage, totalPages }) %>
            <% } %>
        </div>
    </div>

    <footer class="bg-light py-3 mt-auto">
        <div class="container text-center">
            <a href="/admin/login" class="btn btn-sm btn-outline-secondary">Admin Login</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
