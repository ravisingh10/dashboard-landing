<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <span class="navbar-brand"><%= title %></span>
            <div class="d-flex">
                <a href="/admin/settings" class="btn btn-outline-light btn-sm me-2">Settings</a>
                <a href="/admin/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <div class="row mb-3">
            <div class="col-md-8">
                <form action="/admin/user/list" method="GET" class="d-flex">
                    <input type="text" name="search" class="form-control me-2" placeholder="Search users..." value="<%= search %>">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
            <div class="col-md-4 text-end">
                <a href="/admin/user/create" class="btn btn-success">Create New</a>
            </div>
        </div>

        <% if (totalPages > 1) { %>
            <%- include('../partials/pagination', { currentPage, totalPages, search }) %>
        <% } %>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length === 0) { %>
                        <tr>
                            <td colspan="6" class="text-center">No users found.</td>
                        </tr>
                    <% } else { %>
                        <% users.forEach(u => { %>
                            <tr>
                                <td><%= u.id %></td>
                                <td><%= u.userName %></td>
                                <td><%= u.firstName %></td>
                                <td><%= u.lastName || '-' %></td>
                                <td>
                                    <% if (u.active) { %>
                                        <span class="badge bg-success">Yes</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">No</span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/admin/user/edit/<%= u.id %>" class="btn btn-sm btn-primary">Edit</a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>

        <% if (totalPages > 1) { %>
            <%- include('../partials/pagination', { currentPage, totalPages, search }) %>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
