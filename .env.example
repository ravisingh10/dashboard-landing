# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./database/dashboard.db

# JWT Configuration
# IMPORTANT: Change this to a secure random string in production!
# Generate a secure secret using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-this-in-production

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# Default Admin User (used only when creating Docker container)
# These are only used during initial setup if no users exist
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=admin123